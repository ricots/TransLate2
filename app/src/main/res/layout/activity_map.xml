<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <fragment
        android:id="@+id/fr_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        map:mapType="normal"
        tools:context=".ui.activity.MapActivity"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fb_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_margin="8dp"
        app:fabSize="normal"
        app:layout_anchor="@id/fr_map"
        app:layout_anchorGravity="bottom|center"
        app:srcCompat="@drawable/ic_location_my"
        />

        <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fl_bottom_sheet"
            android:background="@color/colorBackground"
            android:clipToPadding="true"
            app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
            >

            <WebView
                android:id="@+id/wv_dashboard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-40dp"
                />

            <TextView
                android:id="@+id/tv_stop_name"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/colorBackground"
                android:padding="16dp"
                android:textColor="@color/colorPrimaryText"
                android:textSize="16sp"
                />

        </FrameLayout>

</android.support.design.widget.CoordinatorLayout>
